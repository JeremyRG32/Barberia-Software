            <thead class="table-dark">

                <tr>

                    <th>ID</th>

                    <th>Nombre</th>

                    <th>Email</th>

                    <th>Teléfono</th>

                    <th>Dirección</th>

                    <th>Estado</th>

                    <th>Locales Favoritos</th>

                    <th class="text-center">Acciones</th>

                </tr>

            </thead>

            <tbody>

                @foreach (var cliente in Model)

                {

                    <tr>

                        <td>@cliente.Id</td>

                        <td>@cliente.Nombre</td>

                        <td>@cliente.Email</td>

                        <td>@cliente.Telefono</td>

                        <td>@cliente.Direccion</td>

                        <td>@cliente.Estado.ToString()</td>

                        <td>

                            @if (cliente.LocalesFavoritos != null && cliente.LocalesFavoritos.Any())

                            {

                                <ul class="mb-0 ps-3">

                                    @foreach (var local in cliente.LocalesFavoritos)

                                    {

                                        <li>@local.Nombre</li>

                                    }

                                </ul>

                            }

                            else

                            {

                                <span class="text-muted">Ninguno</span>

                            }

                        </td>

                        <td class="text-center">

                            <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-info me-1">

                                <i class="bi bi-eye"></i>

                            </a>

                            <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-warning me-1">

                                <i class="bi bi-pencil-square"></i>

                            </a>

                            <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-sm btn-danger">

                                <i class="bi bi-trash"></i>

                            </a>

                        </td>

                    </tr>

                }

            </tbody>

        </table>

    </div>

</div>